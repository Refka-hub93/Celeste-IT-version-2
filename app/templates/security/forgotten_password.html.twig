

{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Demande de réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<main class="d-flex flex-column min-vh-100 justify-content-center align-items-center bg-light py-5">

		<h1 class="mb-4 text-primary fw-bold text-center">Nouveau mot de passe</h1>

		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-8 col-lg-6">
					<div class="card shadow-sm border-0 p-4 bg-white">

						{{ form_start(passForm, {'attr': {'class': 'row g-3'}}) }}

							<div class="col-12">
								{{ form_row(passForm.password, {
									'label': 'Nouveau mot de passe',
									'attr': {
										'class': 'form-control',
										'placeholder': '••••••••'
									}
								}) }}
							</div>

							<div class="col-12 text-center">
								<button type="submit" class="btn btn-primary px-4 py-2" aria-label="Valider le mot de passe">
									Valider
								</button>
							</div>

						{{ form_end(passForm) }}

					</div>
				</div>
			</div>
		</div>

	</main>
{% endblock %}
