{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
               <div class="mb-3">
                Vous êtes connecté(e) en tant que
                {{ app.user.userIdentifier }},
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Créer un compte Celeste-It
        </h1>
        <label for="username"><strong> Email :</strong></label>
        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password"><strong>Password :</strong></label>
        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div class="checkbox p-3">
            <input type="checkbox" name="_remember_me" id="_remember_me"  >
            <label for="_remember_me"  >Se souvenir de moi</label>

        </div>
        <button class="btn   btn-primary" type="submit">
            Se connecter
        </button>
    </form>

    <div class="container text-center mt-4">
        <p class="fs-5 fw-bold">Vous n'êtes pas encore inscrit(e) ?</p>
        <p class="text-muted">Il vous suffit de cliquer ici pour nous rejoindre :</p>
        <a href="{{ path('app_register') }}" class="btn btn-primary">Créer un compte</a>
    </div>


{% endblock %}

