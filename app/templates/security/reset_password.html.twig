{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}
	Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<main class="d-flex flex-column min-vh-75 justify-content-center align-items-center bg-light py-5">

		<h1 class="mb-4 text-primary fw-bold text-center display-5">
			Réinitialisation de mot de passe
		</h1>

		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-8 col-lg-6">
					<div class="card shadow-sm border-0 p-4 bg-white">

						{{ form_start(requestPassForm, {'attr': {'class': 'row g-3'}}) }}

							<div class="col-12">
								{{ form_row(requestPassForm.email, {
									'label': 'Adresse email',
									'attr': {
										'class': 'form-control form-control-lg',
										'placeholder': 'Votre email'
									}
								}) }}
							</div>

							<div class="col-12 text-center">
								<button type="submit" class="btn btn-primary px-4 py-2 btn-lg" aria-label="Envoyer le message">
									Envoyer le lien de réinitialisation
								</button>
							</div>

						{{ form_end(requestPassForm) }}

					</div>
				</div>
			</div>
		</div>

	</main>
{% endblock %}
