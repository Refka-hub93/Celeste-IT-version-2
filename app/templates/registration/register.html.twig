{% extends 'base.html.twig' %}
{% block javascripts %}

	<script src="{{ asset('js/registration.js') }}" defer></script>
{% endblock %}


{% block title %}Register
{% endblock %}


{% block body %}
	<section
		class="container pt-1 ">


		{# Affichage des erreurs de validation globales #}
		{% if form_errors(registrationForm) %}
			<div class="alert alert-danger">
				{{ form_errors(registrationForm) }}
			</div>
		{% endif %}
		<section class="m-1 d-flex justify-content-center align-items-center ">
			<div class="container">
				<div class="row justify-content-center">
					<div class="col-12 col-md-8 col-lg-6">
						<div class="shadow p-4 mt-5 form-regist text-center bg-white rounded">
							<h1 class="text-center mb-4 fw-bold">Créer un compte</h1>

							{{ form_start(registrationForm, {'attr': {'class': 'row g-4'}}) }}

							<div class="col-12">
								{{ form_row(registrationForm.firstname, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez votre prénom', 'tabindex': '1'}
                                }) }}
							</div>

							<div class="col-12">
								{{ form_row(registrationForm.lastname, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom',  'tabindex': '2'}
                                }) }}
							</div>

							<div class="col-12">
								{{ form_row(registrationForm.email, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez votre adresse email',  'tabindex': '3'}
                                }) }}
							</div>

							<div class="col-12">
								{{ form_row(registrationForm.plainPassword, {
                                    'label': 'Mot de passe',
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Entrez un mot de passe sécurisé',  'tabindex': '4'}
                                }) }}
							</div>

							<div class="col-12 d-flex align-items-start gap-2  form-check">
								{{ form_widget(registrationForm.agreeTerms, {
                                 'attr': {'class': 'form-check-input m-0',  'tabindex': '5'}  }) }}
								{{ form_label(registrationForm.agreeTerms, null, {
                                 'label_attr': {'class': 'form-check-label m-0'} }) }}
								{{ form_errors(registrationForm.agreeTerms) }}
							</div>


							<div class="col-12 text-center">
								<button type="submit" aria-label="Créer un compte"  tabindex="6" class="btn btn-primary px-4 py-2">Créer un compte</button>
							</div>

							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</section>

	</section>
{% endblock %}
