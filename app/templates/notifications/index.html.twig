{% extends 'base.html.twig' %}
{% block title %}ðŸ“¨ Notifications{% endblock %}

{% block javascripts %}
  <script src="{{ asset('js/notification.js') }}" defer></script>
{% endblock %}


{% block body %}
<section class="container mt-5" aria-labelledby="notifications-heading">
  <header class="mb-4 d-flex justify-content-between align-items-center rounded p-1">
    <h2 id="notifications-heading" class="h2 text-white  p-2 rounded">
      <i class="bi bi-bell"></i>
 Toutes les notifications
    </h2>
    {# <button id="clear-all-btn" class="btn btn-outline-danger" aria-label="Supprimer toutes les notifications">
      ðŸ§¹ Supprimer toutes
    </button> #}
  </header>

  <ul id="notif-full-list" class="list-group" role="list">
    {% for notif in notifications %}
      <li class="list-group-item d-flex justify-content-between align-items-center" role="listitem" data-id="{{ notif.id }}">
        <div>
          <time datetime="{{ notif.createdAt|date('Y-m-d\\TH:i') }}" class="fw-bold">
            {{ notif.createdAt|date('d/m/Y H:i') }}
          </time>
          <span class="ms-2">{{ notif.message }}</span>
        </div>
        <button 
          class="btn btn-lg   delete-notif-btn" 
          aria-label="Supprimer cette notification"
        > <i class="bi bi-trash3"></i>
        </button>
      </li>
    {% else %}
      <li class="list-group-item text-muted" role="listitem">Aucune notification</li>
    {% endfor %}
  </ul>
</section>
{% endblock %}

