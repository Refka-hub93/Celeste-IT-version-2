

{% extends 'base.html.twig' %}

{% block title %}Mes Tableaux{% endblock %}

{% block body %}
    <h1>Mes Tableaux</h1>

    {% if tableaux is empty %}
        <p>Aucun tableau pour l’instant.</p>
    {% else %}
      {% for tableau in tableaux %}
    <div>
        🗂️ <a href="{{ path('app_tables_show', {'id': tableau.id}) }}">{{ tableau.title }}</a>
    </div>
{% endfor %}

    {% endif %}
{% endblock %}
