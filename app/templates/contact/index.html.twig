{% extends 'base.html.twig' %}

{% block javascripts %}
<script src="{{ asset('js/contact.js') }}" defer  ></script>
{% endblock %}


{% block title %}Contact
{% endblock %}
 

{% block body %}
    <section class="container pt-1">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        <section class="m-1 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-8 col-lg-6">
                        <div class="shadow p-4 mt-5 bg-white rounded">
                            <h1 class="text-center mb-4 fw-bold">Nous contacter</h1>

                            {{ form_start(form, {'attr': {'class': 'row g-4'}}) }}

                            <div class="col-12">
                                {{ form_row(form.firstname, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Votre pr√©nom'}
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.lastname, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.email, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Votre email'}
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.subject, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-select'}
                                }) }}
                            </div>

                            <div class="col-12">
                                {{ form_row(form.message, {
                                    'label_attr': {'class': 'form-label'},
                                    'attr': {'class': 'form-control', 'placeholder': 'Votre message ici...', 'rows': 6}
                                }) }}
                            </div>

                              <div class="col-12">
                                <div class="form-check">
                                    {{ form_widget(form.rgpd, {
                                        'attr': {'class': 'form-check-input'}
                                    }) }}
                                    {{ form_label(form.rgpd, null, {
                                        'label_attr': {'class': 'form-check-label'}
                                    }) }}
                                    {{ form_errors(form.rgpd) }}
                                </div>
                            </div>

                            <div class="col-12 text-center">
                                {{ form_row(form.submit, {
                                    'attr': {'class': 'btn btn-primary px-4 py-2'}
                                }) }}
                            </div>


                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>
{% endblock %}
